
<div class="container" id="cocktails-display">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-md-4">
      <div class="card" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.3) 0%, rgba(0,0,0,0.3) 50%), url('https://source.unsplash.com/random/400x400');">
        <div class="card-description">
          <h2><%= cocktail.name %></h2>
        </div>
        <%= link_to "", cocktail_path(cocktail), class: "card-a" %>
      </div>
    </div>
    <% end %>
  </div>
  <div class="button-add", align="center">
    <%= link_to "Add a cocktail", new_cocktail_path(@cocktail), class: "btn btn-danger" %>
  </div>
</div>


<%= %>
