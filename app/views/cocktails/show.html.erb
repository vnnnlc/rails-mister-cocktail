<div class="banner-container">
  <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.3) 50%), url('<%= cl_image_path @cocktail.photo, height: 300, width: 400, crop: :fill %>'); height: 50vh; background-position: center;">
    <h1 class="text-center"><%= @cocktail.name %></h1>
  </div>
</div>
<div class="header-cocktail">
  <div class="container">

    <div class="cocktail-info">
      <div class="row">
        <% @cocktail.doses.each do |dose| %>
        <div class="col-xs-12 col-sm-6 col-sm-offset-3">
          <div class="cocktail-description">
            <h5><%= dose.ingredient.name %></h5>
            <p><%= dose.description %></p>
          </div>
        </div>
        <% end %>
        <%= link_to 'Add ingredient', edit_cocktail_path(@cocktail), class: "btn btn-danger" %>
        <br>
        <%= link_to 'Back', cocktails_path, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>


